@model List<SistemaSuportado>
@{
}
<div class="card">
    <div class="card-header">
        <ul class="nav nav-pills card-header-pills">
            <li class="nav-item">
                <a class="btn btn-outline-secondary" asp-area="" asp-controller="Sistemas" asp-action="Cadastrar">Cadastrar</a>
            </li>
        </ul>
    </div>

    <div class="card-body">
        <table id="tbSistemasSuportados" name="tbSistemasSuportados" class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Sistema</th>
                    <th scope="col">Data Criação</th>
                    <th scope="col">Alterar</th>
                    <th scope="col">Remover</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var system in @Model)
                    {
                        <tr>
                            <td>@system.id</td>
                            <td>@system.nome</td>
                            <td>@system.data_criacao.ToString("dd/MM/yyyy")</td>
                            <td>
                                @Html.ActionLink("Alterar", "Alterar", new {id = @system.id}, new { @class = "btn btn-outline-secondary" })                                
                            </td>
                            <td>
                                @Html.ActionLink("Remover", "Delete", new {id = @system.id}, new { @class = "btn btn-outline-danger" })                                
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
<script>
    $(document).ready( function ()
    {
       $('#tbSistemasSuportados').DataTable();
    } );
</script>
}