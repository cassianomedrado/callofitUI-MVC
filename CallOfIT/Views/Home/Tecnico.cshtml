@model List<Chamado>
@{
}

<div class="card">
    <div class="card-header">
        <ul class="nav nav-pills card-header-pills">            
        </ul>
    </div>

    <div class="card-body">
        <table id="tbChamadosAtribuidos" name="tbChamadosAtribuidos" class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Data Criação</th>
                    <th scope="col">Solicitante</th>
                    <th scope="col">Data Limite</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var system in @Model)
                    {
                        <tr>
                            <td>@system.id</td>
                            <td>@system.data_criacao.ToString("dd/MM/yyyy")</td>
                            <td>@system.solicitante</td>
                            <td>@system.data_limite.ToString("dd/MM/yyyy")</td>
                            <td>
                                @Html.ActionLink("Abrir", "AbrirChamadoUnit", new {id = @system.id}, new { @class = "btn btn-outline-secondary" })                                
                            </td>                            
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>



@section Scripts{
<script>
   $(document).ready( function ()
   {
      $('#tbChamadosAtribuidos').DataTable();
   } );
</script>
}