@model List<Chamado>

<link rel="stylesheet" href="~/css/tecnico.css" asp-append-version="true" />

<div class="card">
    <div class="card-header d-flex align-items-center">
        <img src="~/Images/gif/testing.gif" class="icon-css">
        <h4 class="text-center mb-0 flex-grow-1">Chamados - Técnico</h4>
    </div>

    <div class="card-body">

        <table id="tbChamadosAtribuidos" name="tbChamadosAtribuidos" class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Data Criação</th>
                    <th scope="col">Solicitante</th>
                    <th scope="col">Data Limite</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var system in @Model)
                    {
                        <tr>
                            <td>@system.id</td>
                            <td>@system.data_criacao.ToString("dd/MM/yyyy")</td>
                            <td>@system.solicitante</td>
                            <td>@system.data_limite.ToString("dd/MM/yyyy")</td>
                            <td>
                                @Html.ActionLink("Abrir", "ChamadoUnit", "Chamados",new {id = @system.id}, new { @class = "btn btn-outline-secondary" })                                
                            </td>                            
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>



@section Scripts{
<script>
   $(document).ready( function ()
   {
        $('#tbChamadosAtribuidos').DataTable({
            "language": {
                "info": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                "infoEmpty": "Mostrando 0 até 0 de 0 registros",
                "infoFiltered": "(Filtrados de _MAX_ registros)",
                "lengthMenu": "Mostrar _MENU_ registros",
                "search": "Buscar:",
                "zeroRecords": "Nenhum registro encontrado",
                "paginate": {
                    "first": "Primeiro",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"
                }
            }
        });
   } );
</script>
}